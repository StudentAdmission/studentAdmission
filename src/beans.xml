http://www.springframework.org/schema/tx
http://www.springframework.org/schema/tx/spring-tx-3.2.xsd">
    <!-- 数据源：DriverManagerDataSource -->
    <bean id="ds"
        class="org.springframework.jdbc.datasource.DriverManagerDataSource">
        <property name="url"
            value="jdbc:mysql://59.188.69.138:3306/a0328132211?useUnicode=true&amp;characterEncoding=UTF-8"/>
        <property name="username" value="a0328132211"/>
        <property name="password" value="4b8c8d2b"/>
